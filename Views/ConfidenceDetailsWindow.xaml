<Window x:Class="ZeroTrustMigrationAddin.Views.ConfidenceDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enrollment Confidence - Full Analysis" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F3F4F6">
    
    <Window.Resources>
        <Style x:Key="CategoryHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style x:Key="ScoreBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸŽ¯" FontSize="28" VerticalAlignment="Center"/>
                <StackPanel Margin="12,0,0,0">
                    <TextBlock Text="Enrollment Confidence Analysis" FontSize="20" FontWeight="Bold" Foreground="#1F2937"/>
                    <TextBlock x:Name="SummaryText" Text="Detailed breakdown of your enrollment readiness score" 
                               FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Overall Score -->
            <Border Background="White" CornerRadius="8" Padding="20" Margin="0,16,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Score Circle -->
                    <Grid Width="100" Height="100">
                        <Ellipse Stroke="#E5E7EB" StrokeThickness="8" Fill="Transparent"/>
                        <Ellipse x:Name="ScoreCircle" Stroke="#F59E0B" StrokeThickness="8" Fill="Transparent"
                                 StrokeDashArray="100,100" StrokeDashOffset="75"/>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="ScoreText" Text="68" FontSize="32" FontWeight="Bold" 
                                       Foreground="#1F2937" HorizontalAlignment="Center"/>
                            <TextBlock Text="/100" FontSize="14" Foreground="#6B7280" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Band and Explanation -->
                    <StackPanel Grid.Column="1" Margin="24,0,0,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="BandBadge" Background="#FEF3C7" CornerRadius="4" Padding="8,4">
                                <TextBlock x:Name="BandText" Text="Medium" FontSize="12" FontWeight="SemiBold" Foreground="#D97706"/>
                            </Border>
                        </StackPanel>
                        <TextBlock x:Name="ExplanationText" TextWrapping="Wrap" Margin="0,8,0,0"
                                   FontSize="13" Foreground="#4B5563" MaxWidth="500"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
        
        <!-- Score Breakdown -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Category Scores -->
                <TextBlock Text="Score Breakdown by Category" Style="{StaticResource CategoryHeader}" Margin="0,0,0,12"/>
                
                <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel x:Name="BreakdownPanel">
                        <!-- Velocity -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="âš¡ Velocity" FontSize="13" Foreground="#374151" VerticalAlignment="Center"/>
                            <ProgressBar x:Name="VelocityBar" Grid.Column="1" Style="{StaticResource ScoreBar}" Value="50" Margin="12,0"/>
                            <TextBlock x:Name="VelocityScore" Grid.Column="2" Text="50" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#374151" HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <!-- Success Rate -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="âœ… Success Rate" FontSize="13" Foreground="#374151" VerticalAlignment="Center"/>
                            <ProgressBar x:Name="SuccessBar" Grid.Column="1" Style="{StaticResource ScoreBar}" Value="75" Margin="12,0"/>
                            <TextBlock x:Name="SuccessScore" Grid.Column="2" Text="75" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#374151" HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <!-- Complexity -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”§ Complexity" FontSize="13" Foreground="#374151" VerticalAlignment="Center"/>
                            <ProgressBar x:Name="ComplexityBar" Grid.Column="1" Style="{StaticResource ScoreBar}" Value="60" Margin="12,0"/>
                            <TextBlock x:Name="ComplexityScore" Grid.Column="2" Text="60" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#374151" HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <!-- Infrastructure -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ—ï¸ Infrastructure" FontSize="13" Foreground="#374151" VerticalAlignment="Center"/>
                            <ProgressBar x:Name="InfraBar" Grid.Column="1" Style="{StaticResource ScoreBar}" Value="80" Margin="12,0"/>
                            <TextBlock x:Name="InfraScore" Grid.Column="2" Text="80" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#374151" HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <!-- Conditional Access -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ›¡ï¸ Conditional Access" FontSize="13" Foreground="#374151" VerticalAlignment="Center"/>
                            <ProgressBar x:Name="CABar" Grid.Column="1" Style="{StaticResource ScoreBar}" Value="70" Margin="12,0"/>
                            <TextBlock x:Name="CAScore" Grid.Column="2" Text="70" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#374151" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Drivers and Detractors -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Top Drivers -->
                    <Border Background="White" CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="âœ¨ Top Drivers" FontSize="14" FontWeight="SemiBold" Foreground="#059669" Margin="0,0,0,12"/>
                            <ItemsControl x:Name="DriversPanel">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#ECFDF5" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="12" Foreground="#065F46"/>
                                                    <TextBlock Text="{Binding ImpactDisplay}" FontSize="11" Foreground="#059669" Margin="8,0,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#047857" Margin="0,4,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                    
                    <!-- Top Detractors -->
                    <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="âš ï¸ Areas for Improvement" FontSize="14" FontWeight="SemiBold" Foreground="#DC2626" Margin="0,0,0,12"/>
                            <ItemsControl x:Name="DetractorsPanel">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FEF2F2" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="12" Foreground="#991B1B"/>
                                                    <TextBlock Text="{Binding ImpactDisplay}" FontSize="11" Foreground="#DC2626" Margin="8,0,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#B91C1C" Margin="0,4,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Margin="0,16,0,0">
            <Button Content="Close" HorizontalAlignment="Right" Padding="20,8" Click="CloseButton_Click"
                    Background="#3B82F6" Foreground="White" BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Border>
    </Grid>
</Window>
