<Window x:Class="ZeroTrustMigrationAddin.Views.EnrollmentSimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enrollment Readiness Analysis Results" 
        Height="700" Width="1000" 
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E8E8E8"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="24,20" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”¬" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Enrollment Readiness Analysis Results" FontSize="20" FontWeight="SemiBold" Foreground="#333333"/>
                    </StackPanel>
                    <TextBlock x:Name="PolicySummary" Text="Evaluated against: Default Compliance Policy" 
                               FontSize="12" Foreground="#666666" Margin="36,6,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#E3F2FD" CornerRadius="4" Padding="12,6" Margin="0,0,10,0">
                        <TextBlock FontSize="11" Foreground="#1565C0">
                            <Run Text="Data Freshness: "/>
                            <Run x:Name="FreshnessValue" Text="95%" FontWeight="SemiBold"/>
                        </TextBlock>
                    </Border>
                    <Button x:Name="ExportAllButton" Click="ExportAll_Click"
                            Background="#0078D4" Foreground="White" Padding="14,8"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="ðŸ“¤ Export Full Report" FontWeight="SemiBold"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="24,20,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Devices -->
            <Border Grid.Column="0" Style="{StaticResource MetricCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="TOTAL DEVICES" FontSize="10" FontWeight="Bold" Foreground="#666666"/>
                    <TextBlock x:Name="TotalDevicesCount" Text="1,000" FontSize="28" FontWeight="Bold" Foreground="#333333" Margin="0,6,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock x:Name="EnrolledCount" Text="350 enrolled" FontSize="11" Foreground="#2E7D32"/>
                        <TextBlock Text=" â€¢ " FontSize="11" Foreground="#999999"/>
                        <TextBlock x:Name="UnenrolledCount" Text="650 unenrolled" FontSize="11" Foreground="#E65100"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Ready to Enroll -->
            <Border Grid.Column="1" Style="{StaticResource MetricCard}" Background="#E8F5E9" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="âœ“ READY TO ENROLL" FontSize="10" FontWeight="Bold" Foreground="#2E7D32"/>
                    <TextBlock x:Name="ReadyDevicesCount" Text="425" FontSize="28" FontWeight="Bold" Foreground="#2E7D32" Margin="0,6,0,0"/>
                    <TextBlock x:Name="ReadyPercent" Text="65% of unenrolled" FontSize="11" Foreground="#388E3C"/>
                </StackPanel>
            </Border>

            <!-- Needs Remediation -->
            <Border Grid.Column="2" Style="{StaticResource MetricCard}" Background="#FFF3E0" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="âš  NEEDS REMEDIATION" FontSize="10" FontWeight="Bold" Foreground="#E65100"/>
                    <TextBlock x:Name="RemediationDevicesCount" Text="225" FontSize="28" FontWeight="Bold" Foreground="#E65100" Margin="0,6,0,0"/>
                    <TextBlock x:Name="RemediationPercent" Text="35% of unenrolled" FontSize="11" Foreground="#F57C00"/>
                </StackPanel>
            </Border>

            <!-- Projected Compliance -->
            <Border Grid.Column="3" Style="{StaticResource MetricCard}" Background="#E3F2FD">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š PROJECTED COMPLIANCE" FontSize="10" FontWeight="Bold" Foreground="#0D47A1"/>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock x:Name="CurrentComplianceRate" Text="82%" FontSize="18" Foreground="#666666"/>
                        <TextBlock Text=" â†’ " FontSize="18" Foreground="#999999"/>
                        <TextBlock x:Name="ProjectedComplianceRate" Text="89%" FontSize="28" FontWeight="Bold" Foreground="#0D47A1"/>
                    </StackPanel>
                    <TextBlock x:Name="ComplianceNote" Text="After enrolling all devices" FontSize="11" Foreground="#1976D2"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Tabbed Content -->
        <TabControl Grid.Row="2" Margin="24,20,24,0" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#666666"/>
                    <Setter Property="Padding" Value="16,10"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                        BorderBrush="#E0E0E0" BorderThickness="0,0,0,2" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                                        <Setter Property="Foreground" Value="#0078D4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Gap Analysis Tab -->
            <TabItem Header="ðŸ“Š Gap Analysis">
                <Border Background="White" CornerRadius="0,0,8,8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Compliance gaps by category - showing which requirements are missing on unenrolled devices"
                                   FontSize="12" Foreground="#666666" Margin="0,0,0,15"/>

                        <DataGrid Grid.Row="1" x:Name="GapAnalysisGrid" Style="{StaticResource DataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="" Binding="{Binding Icon}" Width="40"/>
                                <DataGridTextColumn Header="REQUIREMENT" Binding="{Binding Requirement}" Width="150"/>
                                <DataGridTextColumn Header="AFFECTED DEVICES" Binding="{Binding DeviceCount}" Width="120"/>
                                <DataGridTextColumn Header="% OF UNENROLLED" Binding="{Binding Percentage, StringFormat='{}{0:F1}%'}" Width="120"/>
                                <DataGridTextColumn Header="REMEDIATION" Binding="{Binding RemediationAction}" Width="*"/>
                                <DataGridTextColumn Header="EFFORT" Binding="{Binding RemediationEffort}" Width="80"/>
                                <DataGridTextColumn Header="AUTO" Binding="{Binding AutoRemediateText}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Devices Needing Remediation Tab -->
            <TabItem Header="âš  Devices Needing Remediation">
                <Border Background="White" CornerRadius="0,0,8,8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Devices that would fail compliance if enrolled today"
                                   FontSize="12" Foreground="#666666" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Filter by gap: " VerticalAlignment="Center" FontSize="12" Foreground="#666666"/>
                            <ComboBox x:Name="GapFilterCombo" Width="200" SelectionChanged="GapFilter_Changed">
                                <ComboBoxItem Content="All Gaps" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>

                        <DataGrid Grid.Row="2" x:Name="RemediationDevicesGrid" Style="{StaticResource DataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="DEVICE NAME" Binding="{Binding DeviceName}" Width="200"/>
                                <DataGridTextColumn Header="GAPS" Binding="{Binding GapCount}" Width="60"/>
                                <DataGridTextColumn Header="COMPLIANCE GAPS" Binding="{Binding GapsList}" Width="*"/>
                                <DataGridTextColumn Header="MAX EFFORT" Binding="{Binding MaxEffort}" Width="100"/>
                                <DataGridTextColumn Header="LAST SCAN" Binding="{Binding LastScanText}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Ready Devices Tab -->
            <TabItem Header="âœ“ Ready Devices">
                <Border Background="White" CornerRadius="0,0,8,8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Devices that would be compliant if enrolled today - candidates for immediate enrollment"
                                   FontSize="12" Foreground="#666666" Margin="0,0,0,15"/>

                        <DataGrid Grid.Row="1" x:Name="ReadyDevicesGrid" Style="{StaticResource DataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="DEVICE NAME" Binding="{Binding DeviceName}" Width="200"/>
                                <DataGridTextColumn Header="OS VERSION" Binding="{Binding OSVersion}" Width="120"/>
                                <DataGridTextColumn Header="BITLOCKER" Binding="{Binding BitLockerText}" Width="80"/>
                                <DataGridTextColumn Header="FIREWALL" Binding="{Binding FirewallText}" Width="80"/>
                                <DataGridTextColumn Header="DEFENDER" Binding="{Binding DefenderText}" Width="80"/>
                                <DataGridTextColumn Header="TPM" Binding="{Binding TpmText}" Width="80"/>
                                <DataGridTextColumn Header="SECURE BOOT" Binding="{Binding SecureBootText}" Width="100"/>
                                <DataGridTextColumn Header="LAST SCAN" Binding="{Binding LastScanText}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Policy Details Tab -->
            <TabItem Header="ðŸ“‹ Policy Requirements">
                <Border Background="White" CornerRadius="0,0,8,8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Intune compliance policy settings used for this simulation"
                                   FontSize="12" Foreground="#666666" Margin="0,0,0,15"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="PolicyDetailsPanel">
                                <!-- Policy details will be populated here -->
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="3" Background="White" Padding="24,16" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="â„¹ï¸" FontSize="12" Margin="0,0,8,0"/>
                    <TextBlock Text="Results based on actual device inventory and Intune policy settings. " FontSize="11" Foreground="#666666"/>
                    <TextBlock Text="100% data-driven - no estimates or assumptions." FontSize="11" Foreground="#2E7D32" FontWeight="SemiBold"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Close" Padding="20,8" Click="Close_Click" 
                        Background="#F5F5F5" BorderBrush="#E0E0E0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
