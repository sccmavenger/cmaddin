<Window x:Class="ZeroTrustMigrationAddin.Views.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Updating Cloud Journey Dashboard"
        Width="500" Height="250"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border Background="White" CornerRadius="10" BorderBrush="#0078D4" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#0078D4" Direction="270" ShadowDepth="3" BlurRadius="10" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="ðŸ”„" FontSize="40" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="TitleText" Text="Downloading Update" FontSize="20" FontWeight="Bold" Foreground="#0078D4"/>
                    <TextBlock x:Name="VersionText" FontSize="13" Foreground="#666" Margin="0,5,0,0">
                        <Run Text="Updating to version"/>
                        <Run x:Name="NewVersionRun" Text="3.14.26" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Status Message -->
            <TextBlock Grid.Row="1" x:Name="StatusText" 
                      Text="Preparing download..." 
                      FontSize="14" 
                      Foreground="#333"
                      TextWrapping="Wrap"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,15"/>

            <!-- Progress Bar -->
            <Border Grid.Row="2" Background="#F0F0F0" CornerRadius="8" Height="30" Margin="0,0,0,20">
                <Grid>
                    <Border x:Name="ProgressBar" 
                           Background="#0078D4" 
                           CornerRadius="8" 
                           HorizontalAlignment="Left"
                           Width="0"/>
                    <TextBlock x:Name="ProgressText" 
                              Text="0%" 
                              FontSize="13" 
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Info -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="âš ï¸" FontSize="14" Margin="0,0,5,0"/>
                <TextBlock Text="Please do not close this window" FontSize="12" Foreground="#666"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
