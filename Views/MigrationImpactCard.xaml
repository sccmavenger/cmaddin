<UserControl x:Class="ZeroTrustMigrationAddin.Views.MigrationImpactCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    
    <UserControl.Resources>
        <Style x:Key="CategoryBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
        </Style>
    </UserControl.Resources>
    
    <Border Background="White" CornerRadius="8" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="ðŸ“ˆ" FontSize="20" VerticalAlignment="Center"/>
                <TextBlock Text=" MIGRATION IMPACT FORECAST" FontSize="14" FontWeight="Bold" 
                           Foreground="#333333" VerticalAlignment="Center" Margin="4,0,0,0"/>
                <Button x:Name="ShowBreakdownButton" Content="â–¼ Show Details" 
                        Background="Transparent" BorderThickness="0" Foreground="#0078D4"
                        FontSize="11" Cursor="Hand" Margin="12,0,0,0" Click="ShowBreakdownButton_Click"/>
            </StackPanel>
            
            <!-- Overall Score Comparison -->
            <Border Grid.Row="1" Background="#F8FAFC" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Current State -->
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="CURRENT STATE" FontSize="10" Foreground="#6B7280" 
                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="CurrentScoreText" Text="45" FontSize="36" FontWeight="Bold" 
                                   Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        <TextBlock Text="IT Posture Score" FontSize="11" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Arrow -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="24,0">
                        <TextBlock Text="â†’" FontSize="32" Foreground="#10B981" FontWeight="Bold"/>
                        <TextBlock x:Name="ImprovementText" Text="+37" FontSize="14" FontWeight="Bold" 
                                   Foreground="#10B981" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Projected State -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="PROJECTED STATE" FontSize="10" Foreground="#10B981" 
                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="ProjectedScoreText" Text="82" FontSize="36" FontWeight="Bold" 
                                   Foreground="#10B981" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        <TextBlock Text="After Full Enrollment" FontSize="11" Foreground="#6EE7B7" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Executive Summary -->
            <TextBlock x:Name="SummaryText" Grid.Row="2" TextWrapping="Wrap" FontSize="12" Foreground="#4B5563" Margin="0,0,0,16"
                       Text="Completing your cloud migration will improve your overall IT posture by 37 points. The biggest gains will be in Security (+42 points)."/>
            
            <!-- Category Breakdown (Collapsible) -->
            <ScrollViewer x:Name="BreakdownSection" Grid.Row="3" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                <StackPanel>
                    <!-- Category Cards -->
                    <ItemsControl x:Name="CategoryList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F9FAFB" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Icon and Name -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}" FontSize="16" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding DisplayName}" FontSize="13" FontWeight="SemiBold" 
                                                       Foreground="#374151" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- Progress Bar -->
                                        <Grid Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                            <ProgressBar Value="{Binding CurrentScore}" Maximum="100" 
                                                         Height="8" Background="#E5E7EB" Foreground="#9CA3AF"/>
                                            <ProgressBar Value="{Binding ProjectedScore}" Maximum="100" 
                                                         Height="8" Background="Transparent" Foreground="{Binding Color}" Opacity="0.6"/>
                                        </Grid>
                                        
                                        <!-- Scores -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentScore}" FontSize="12" Foreground="#6B7280" Width="25" TextAlignment="Right"/>
                                            <TextBlock Text=" â†’ " FontSize="12" Foreground="#9CA3AF"/>
                                            <TextBlock Text="{Binding ProjectedScore}" FontSize="12" FontWeight="SemiBold" Foreground="#10B981" Width="25"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Top Benefits -->
                    <TextBlock Text="ðŸŒŸ Top Benefits" FontSize="13" FontWeight="SemiBold" Foreground="#374151" Margin="0,12,0,8"/>
                    <ItemsControl x:Name="BenefitsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#ECFDF5" CornerRadius="4" Padding="10" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Text="{Binding Icon}" FontSize="14" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" Margin="8,0">
                                            <TextBlock Text="{Binding Title}" FontSize="12" FontWeight="SemiBold" Foreground="#065F46"/>
                                            <TextBlock Text="{Binding Description}" FontSize="10" Foreground="#047857" 
                                                       TextWrapping="Wrap" MaxWidth="350"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding QuantifiedImpact}" FontSize="12" 
                                                   FontWeight="Bold" Foreground="#059669" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Actions -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button x:Name="RefreshButton" Content="ðŸ”„ Refresh" Click="RefreshButton_Click"
                        Background="Transparent" BorderBrush="#6B7280" BorderThickness="1"
                        Foreground="#6B7280" Padding="12,6" FontSize="12" Cursor="Hand" Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="ViewFullReportButton" Content="ðŸ“Š View Full Report" Click="ViewFullReportButton_Click"
                        Background="#0078D4" Foreground="White" 
                        Padding="12,6" FontSize="12" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
