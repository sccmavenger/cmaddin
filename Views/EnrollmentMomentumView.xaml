<UserControl x:Class="ZeroTrustMigrationAddin.Views.EnrollmentMomentumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:converters="clr-namespace:ZeroTrustMigrationAddin.Converters"
             FontFamily="Segoe UI Emoji, Segoe UI, Arial">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="MetricLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style x:Key="MetricValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#F8F9FA" CornerRadius="8" Padding="20">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“ˆ ENROLLMENT MOMENTUM" FontSize="16" FontWeight="Bold" Foreground="#333333"/>
                    <TextBlock Text="Real-time velocity tracking and trend analysis" FontSize="12" Foreground="#666666" Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="â†» Refresh" 
                        Command="{Binding RefreshCommand}"
                        Background="#0078D4" Foreground="White" 
                        Padding="15,8" FontSize="12"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Metrics Row -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total ConfigMgr Devices -->
                <Border Grid.Column="0" Style="{StaticResource MetricCard}">
                    <StackPanel>
                        <TextBlock Text="CONFIGMGR DEVICES" Style="{StaticResource MetricLabel}"/>
                        <TextBlock Text="{Binding TotalConfigMgrDevices, StringFormat='{}{0:N0}'}" 
                                   Style="{StaticResource MetricValue}" Foreground="#D83B01"/>
                        <TextBlock Text="Still managed by SCCM" FontSize="10" Foreground="#999999" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Co-managed Devices -->
                <Border Grid.Column="2" Style="{StaticResource MetricCard}">
                    <StackPanel>
                        <TextBlock Text="CO-MANAGED DEVICES" Style="{StaticResource MetricLabel}"/>
                        <TextBlock Text="{Binding TotalIntuneDevices, StringFormat='{}{0:N0}'}" 
                                   Style="{StaticResource MetricValue}" Foreground="#107C10"/>
                        <TextBlock Text="ConfigMgr + Intune" FontSize="10" Foreground="#999999" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Gap -->
                <Border Grid.Column="4" Style="{StaticResource MetricCard}">
                    <StackPanel>
                        <TextBlock Text="ENROLLMENT GAP" Style="{StaticResource MetricLabel}"/>
                        <TextBlock Text="{Binding Gap, StringFormat='{}{0:N0}'}" 
                                   Style="{StaticResource MetricValue}" Foreground="#F57C00"/>
                        <TextBlock FontSize="10" Foreground="#999999" Margin="0,5,0,0">
                            <Run Text="{Binding EnrolledPct, StringFormat='{}{0:F1}%', Mode=OneWay}"/>
                            <Run Text=" enrolled"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- 7-Day Velocity -->
                <Border Grid.Column="6" Style="{StaticResource MetricCard}">
                    <StackPanel>
                        <TextBlock Text="7-DAY VELOCITY" Style="{StaticResource MetricLabel}"/>
                        <TextBlock Style="{StaticResource MetricValue}">
                            <Run Text="{Binding Velocity7Day, StringFormat='{}{0:F0}', Mode=OneWay}" Foreground="#0078D4"/>
                            <Run Text="/wk" FontSize="12" Foreground="#666666"/>
                        </TextBlock>
                        <TextBlock Text="Recent enrollment rate" FontSize="10" Foreground="#999999" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- 30-Day Velocity -->
                <Border Grid.Column="8" Style="{StaticResource MetricCard}">
                    <StackPanel>
                        <TextBlock Text="30-DAY VELOCITY" Style="{StaticResource MetricLabel}"/>
                        <TextBlock Style="{StaticResource MetricValue}">
                            <Run Text="{Binding Velocity30, StringFormat='{}{0:F0}', Mode=OneWay}" Foreground="#6A1B9A"/>
                            <Run Text="/wk" FontSize="12" Foreground="#666666"/>
                        </TextBlock>
                        <TextBlock Text="Average weekly rate" FontSize="10" Foreground="#999999" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Trend Status Card -->
            <Border Background="White" CornerRadius="6" Padding="15" Margin="0,0,0,20"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Trend Icon -->
                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25" 
                            Background="{Binding TrendBackgroundColor}" Margin="0,0,15,0">
                        <TextBlock Text="{Binding TrendIcon}" FontSize="24" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Trend Description -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TrendDescription}" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#333333" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding TrendExplanation}" FontSize="12" Foreground="#666666" 
                                   TextWrapping="Wrap" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Trust Trough Warning -->
                    <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="6" Padding="12,8"
                            Visibility="{Binding IsTrustTroughRisk, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="âš ï¸ TRUST TROUGH ZONE" FontSize="11" FontWeight="Bold" Foreground="#E65100"/>
                            <TextBlock Text="50-60% is a common stall point" FontSize="10" Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Velocity Chart -->
            <Border Background="White" CornerRadius="6" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š VELOCITY TREND (Last 12 Weeks)" FontSize="13" FontWeight="SemiBold" 
                               Foreground="#333333" Margin="0,0,0,15"/>
                    
                    <lvc:CartesianChart Height="200" DisableAnimations="True"
                                         Series="{Binding VelocitySeries}">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Week" Labels="{Binding WeekLabels}" FontSize="10">
                                <lvc:Axis.Separator>
                                    <lvc:Separator StrokeThickness="0"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Devices/Week" MinValue="0" FontSize="10">
                                <lvc:Axis.Separator>
                                    <lvc:Separator StrokeThickness="0.5" Stroke="#E0E0E0"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>

                    <!-- Chart Legend -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <Ellipse Width="10" Height="10" Fill="#0078D4" Margin="0,0,5,0"/>
                            <TextBlock Text="Weekly Enrollments" FontSize="11" Foreground="#666666"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="20" Height="2" Fill="#107C10" Margin="0,0,5,0"/>
                            <TextBlock Text="Target Velocity" FontSize="11" Foreground="#666666"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
