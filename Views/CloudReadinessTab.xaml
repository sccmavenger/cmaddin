<UserControl x:Class="ZeroTrustMigrationAddin.Views.CloudReadinessTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ZeroTrustMigrationAddin.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Progress Bar Styles -->
        <Style x:Key="ReadinessProgressBar" TargetType="Border">
            <Setter Property="Height" Value="12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="#E8E8E8"/>
        </Style>
        
        <Style x:Key="SignalCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="BlockerItem" TargetType="Border">
            <Setter Property="Background" Value="#FFF5F5"/>
            <Setter Property="BorderBrush" Value="#FFCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            
            <!-- Header Section -->
            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                    CornerRadius="8" Padding="25" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="â˜ï¸ Cloud Readiness Signals" FontSize="24" FontWeight="Bold" 
                                   Foreground="#333333" Margin="0,0,0,8"/>
                        <TextBlock Text="Assess your environment's readiness for cloud migration workloads" 
                                   FontSize="14" Foreground="#666666" TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" Content="ðŸ”„ Refresh Assessment"
                            x:Name="RefreshButton" Click="RefreshButton_Click"
                            Background="#0078D4" Foreground="White"
                            Padding="15,10" FontSize="14"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Overall Readiness Summary -->
            <Border BorderBrush="#E0E0E0" BorderThickness="1" 
                    CornerRadius="8" Padding="25" Margin="0,0,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#F0F9FF" Offset="0"/>
                        <GradientStop Color="#E0F2FE" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Overall Score Circle -->
                    <Border Grid.Column="0" Width="100" Height="100" CornerRadius="50" 
                            BorderThickness="6" Margin="0,0,25,0"
                            x:Name="OverallScoreCircle">
                        <Border.BorderBrush>
                            <SolidColorBrush x:Name="OverallScoreBorderBrush" Color="#0078D4"/>
                        </Border.BorderBrush>
                        <Border.Background>
                            <SolidColorBrush Color="#0078D4" Opacity="0.1"/>
                        </Border.Background>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="OverallScoreText" Text="0%" FontSize="28" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Foreground="#0078D4"/>
                            <TextBlock Text="Overall" FontSize="10" Foreground="#666666" 
                                       HorizontalAlignment="Center" Margin="0,-3,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Status Text -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="OverallStatusText" Text="Assessing..." FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#333333"/>
                        <TextBlock x:Name="DeviceCountText" Text="0 devices assessed" FontSize="13" 
                                   Foreground="#666666" Margin="0,5,0,0"/>
                        <TextBlock x:Name="LastRefreshText" Text="Last refresh: --" FontSize="12" 
                                   Foreground="#888888" Margin="0,3,0,0"/>
                    </StackPanel>
                    
                    <!-- Quick Stats -->
                    <Border Grid.Column="2" Background="White" CornerRadius="8" 
                            Padding="15,10" Margin="10,0">
                        <StackPanel>
                            <TextBlock Text="Signals Ready" FontSize="11" Foreground="#666666"/>
                            <TextBlock x:Name="SignalsReadyText" Text="0 / 6" FontSize="20" FontWeight="Bold" 
                                       Foreground="#107C10"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="3" Background="White" CornerRadius="8" 
                            Padding="15,10" Margin="10,0">
                        <StackPanel>
                            <TextBlock Text="Blockers Found" FontSize="11" Foreground="#666666"/>
                            <TextBlock x:Name="BlockersFoundText" Text="0" FontSize="20" FontWeight="Bold" 
                                       Foreground="#D13438"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Readiness Signals Grid -->
            <TextBlock Text="ðŸ“Š READINESS SIGNALS" FontSize="14" FontWeight="SemiBold" 
                       Foreground="#333333" Margin="0,0,0,15"/>
            
            <!-- Signals Container -->
            <ItemsControl x:Name="SignalsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource SignalCard}" Margin="0,0,10,10">
                            <StackPanel>
                                <!-- Signal Header -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="28" 
                                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="#333333"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" 
                                                   Foreground="#666666" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding StatusIcon}" FontSize="20" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding ReadinessLevel}" FontSize="11" 
                                                   HorizontalAlignment="Center">
                                            <TextBlock.Foreground>
                                                <SolidColorBrush Color="{Binding StatusColor}"/>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Progress Bar -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Style="{StaticResource ReadinessProgressBar}">
                                        <Border CornerRadius="6" HorizontalAlignment="Left">
                                            <Border.Width>
                                                <MultiBinding Converter="{StaticResource BoolToVisibilityConverter}" 
                                                              ConverterParameter="PercentageWidth">
                                                    <Binding Path="ReadinessPercentage"/>
                                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Border}"/>
                                                </MultiBinding>
                                            </Border.Width>
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding StatusColor}"/>
                                            </Border.Background>
                                        </Border>
                                    </Border>
                                    
                                    <TextBlock Grid.Column="1" FontSize="16" FontWeight="Bold" 
                                               Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock.Text>
                                            <Binding Path="ReadinessPercentage" StringFormat="{}{0:F0}%"/>
                                        </TextBlock.Text>
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{Binding StatusColor}"/>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </Grid>
                                
                                <!-- Device Count -->
                                <TextBlock Margin="0,0,0,12" FontSize="12" Foreground="#666666">
                                    <Run Text="{Binding ReadyDevices, Mode=OneWay}"/>
                                    <Run Text=" of "/>
                                    <Run Text="{Binding TotalDevices, Mode=OneWay}"/>
                                    <Run Text=" devices ready"/>
                                </TextBlock>
                                
                                <!-- Top Blockers (if any) -->
                                <ItemsControl ItemsSource="{Binding TopBlockers}" Margin="0,0,0,10">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#FFF8F8" CornerRadius="4" 
                                                    Padding="8" Margin="0,0,0,5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="{Binding SeverityIcon}" 
                                                               FontSize="14" Margin="0,0,8,0"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                                               FontSize="12" Foreground="#333333"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="2" FontSize="12" 
                                                               Foreground="#D13438" FontWeight="SemiBold">
                                                        <Run Text="{Binding AffectedDeviceCount, Mode=OneWay}"/>
                                                        <Run Text=" devices"/>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Learn More Link -->
                                <TextBlock Margin="0,5,0,0">
                                    <Hyperlink NavigateUri="{Binding LearnMoreUrl}" 
                                               RequestNavigate="Hyperlink_RequestNavigate"
                                               Foreground="#0078D4">
                                        Learn more about <Run Text="{Binding Name, Mode=OneWay}"/> â†’
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- Top Blockers Section -->
            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                    CornerRadius="8" Padding="20" Margin="0,10,0,20"
                    x:Name="TopBlockersSection" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="ðŸš§ TOP BLOCKERS ACROSS ALL SIGNALS" FontSize="14" FontWeight="SemiBold" 
                               Foreground="#D13438" Margin="0,0,0,15"/>
                    
                    <ItemsControl x:Name="TopBlockersItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource BlockerItem}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Grid.RowSpan="2" Text="{Binding SeverityIcon}" 
                                                   FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        
                                        <StackPanel Grid.Column="1" Grid.Row="0">
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="#333333"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" 
                                                       Foreground="#666666" TextWrapping="Wrap" Margin="0,3,0,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right">
                                            <TextBlock FontSize="20" FontWeight="Bold" Foreground="#D13438" 
                                                       HorizontalAlignment="Right">
                                                <Run Text="{Binding AffectedDeviceCount, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBlock Text="devices affected" FontSize="11" Foreground="#888888" 
                                                       HorizontalAlignment="Right"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" 
                                                    Orientation="Horizontal" Margin="0,10,0,0">
                                            <TextBlock Text="ðŸ’¡ " FontSize="12"/>
                                            <TextBlock Text="{Binding RemediationAction}" FontSize="12" 
                                                       Foreground="#0078D4"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Recommendations Section -->
            <Border Background="#F0FFF0" BorderBrush="#C8E6C9" BorderThickness="1" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸ’¡ RECOMMENDATIONS" FontSize="14" FontWeight="SemiBold" 
                               Foreground="#2E7D32" Margin="0,0,0,15"/>
                    
                    <StackPanel x:Name="RecommendationsPanel">
                        <!-- Will be populated programmatically -->
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Call to Action -->
            <Border Background="White" BorderBrush="#0078D4" BorderThickness="2" 
                    CornerRadius="8" Padding="25" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="ðŸš€ Ready to Start Your Cloud Journey?" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#333333"/>
                        <TextBlock Text="These readiness signals connect directly to the workloads in your migration plan. Address blockers to accelerate your transition to cloud-native management." 
                                   FontSize="13" Foreground="#666666" TextWrapping="Wrap" Margin="0,8,0,0"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" Content="View Workloads Tab â†’"
                            x:Name="ViewWorkloadsButton" Click="ViewWorkloadsButton_Click"
                            Background="#0078D4" Foreground="White"
                            Padding="20,12" FontSize="14" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand" Margin="20,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay" Background="#80FFFFFF" 
                    Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Assessing cloud readiness..." FontSize="16" 
                               Foreground="#666666" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
