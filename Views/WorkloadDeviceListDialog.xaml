<Window x:Class="ZeroTrustMigrationAddin.Views.WorkloadDeviceListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Co-Management Workload Authority" 
        Width="1400" Height="700"
        WindowStartupLocation="CenterOwner"
        Background="White"
        FontFamily="Segoe UI Emoji, Segoe UI, Arial"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Intune (Green) style -->
        <Style x:Key="IntuneCell" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#107C10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <!-- ConfigMgr (Orange) style -->
        <Style x:Key="ConfigMgrCell" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CA5010"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock x:Name="TitleText" 
                           Text="Device workload view" 
                           FontSize="22" FontWeight="SemiBold" 
                           Foreground="#333"/>
                <TextBlock x:Name="SubtitleText" 
                           Text="Co-managed with workloads in ConfigMgr" 
                           FontSize="13" Foreground="#666"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <Button Grid.Column="1" 
                    Content="âœ•" 
                    FontSize="18"
                    Width="32" Height="32"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click"
                    Cursor="Hand"
                    ToolTip="Close">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#666"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#333"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Legend -->
        <Border Grid.Row="1" Background="#F9F9F9" CornerRadius="6" Padding="15,10" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Legend: " FontWeight="SemiBold" Foreground="#333" VerticalAlignment="Center"/>
                <Border Background="#E8F5E9" CornerRadius="3" Padding="8,4" Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ…" Margin="0,0,5,0"/>
                        <TextBlock Text="Intune" Foreground="#107C10" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
                <Border Background="#FFF3E0" CornerRadius="3" Padding="8,4" Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš™ï¸" Margin="0,0,5,0"/>
                        <TextBlock Text="ConfigMgr" Foreground="#CA5010" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
                <TextBlock Text="  |  " Foreground="#CCC" VerticalAlignment="Center" Margin="10,0"/>
                <TextBlock Text="Goal: Move all workloads to " Foreground="#666" VerticalAlignment="Center"/>
                <TextBlock Text="âœ… Intune" Foreground="#107C10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock Text=" for cloud-native readiness" Foreground="#666" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Search Box -->
        <Border Grid.Row="2" 
                Background="#F9F9F9" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                CornerRadius="4"
                Padding="12,10"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="ðŸ”" 
                           FontSize="14" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                
                <TextBox Grid.Column="1"
                         x:Name="SearchBox"
                         Text=""
                         BorderThickness="0"
                         Background="Transparent"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         TextChanged="SearchBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Resources>
                                <VisualBrush x:Key="PlaceholderBrush" TileMode="None" Stretch="None" AlignmentX="Left">
                                    <VisualBrush.Visual>
                                        <TextBlock Text="Search by device name..." 
                                                   Foreground="#999" 
                                                   FontStyle="Italic"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background" Value="{StaticResource PlaceholderBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>
        </Border>

        <!-- DataGrid with workload columns -->
        <DataGrid Grid.Row="3" 
                  x:Name="DevicesDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#E8E8E8"
                  BorderBrush="#E0E0E0"
                  BorderThickness="1"
                  RowHeight="36"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Background="White"
                  AlternatingRowBackground="#FAFAFA">
            <DataGrid.Columns>
                <!-- Device Name (wider) -->
                <DataGridTextColumn Header="Device Name" Binding="{Binding DeviceName}" Width="180">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Workloads on Intune count -->
                <DataGridTextColumn Header="On Intune" Binding="{Binding WorkloadsManagedByIntuneCount}" Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#107C10"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Compliance Policy -->
                <DataGridTemplateColumn Header="Compliance" Width="85">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CompliancePolicyDisplay}" 
                                       HorizontalAlignment="Center"
                                       ToolTip="{Binding CompliancePolicyTooltip}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CompliancePolicyManagedByConfigMgr}" Value="False">
                                                <Setter Property="Foreground" Value="#107C10"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CompliancePolicyManagedByConfigMgr}" Value="True">
                                                <Setter Property="Foreground" Value="#CA5010"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- Device Configuration -->
                <DataGridTemplateColumn Header="Device Config" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DeviceConfigurationDisplay}" 
                                       HorizontalAlignment="Center"
                                       ToolTip="{Binding DeviceConfigurationTooltip}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DeviceConfigurationManagedByConfigMgr}" Value="False">
                                                <Setter Property="Foreground" Value="#107C10"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DeviceConfigurationManagedByConfigMgr}" Value="True">
                                                <Setter Property="Foreground" Value="#CA5010"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- Windows Update -->
                <DataGridTemplateColumn Header="Win Update" Width="85">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding WindowsUpdateDisplay}" 
                                       HorizontalAlignment="Center"
                                       ToolTip="{Binding WindowsUpdateTooltip}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding WindowsUpdateManagedByConfigMgr}" Value="False">
                                                <Setter Property="Foreground" Value="#107C10"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WindowsUpdateManagedByConfigMgr}" Value="True">
                                                <Setter Property="Foreground" Value="#CA5010"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- Endpoint Protection -->
                <DataGridTemplateColumn Header="Endpoint Prot" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding EndpointProtectionDisplay}" 
                                       HorizontalAlignment="Center"
                                       ToolTip="{Binding EndpointProtectionTooltip}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EndpointProtectionManagedByConfigMgr}" Value="False">
                                                <Setter Property="Foreground" Value="#107C10"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding EndpointProtectionManagedByConfigMgr}" Value="True">
                                                <Setter Property="Foreground" Value="#CA5010"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- Modern Apps -->
                <DataGridTemplateColumn Header="Modern Apps" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ModernAppsDisplay}" 
                                       HorizontalAlignment="Center"
                                       ToolTip="{Binding ModernAppsTooltip}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ModernAppsManagedByConfigMgr}" Value="False">
                                                <Setter Property="Foreground" Value="#107C10"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ModernAppsManagedByConfigMgr}" Value="True">
                                                <Setter Property="Foreground" Value="#CA5010"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- Office Apps -->
                <DataGridTemplateColumn Header="Office Apps" Width="85">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding OfficeAppsDisplay}" 
                                       HorizontalAlignment="Center"
                                       ToolTip="{Binding OfficeAppsTooltip}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OfficeAppsManagedByConfigMgr}" Value="False">
                                                <Setter Property="Foreground" Value="#107C10"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding OfficeAppsManagedByConfigMgr}" Value="True">
                                                <Setter Property="Foreground" Value="#CA5010"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- Resource Access -->
                <DataGridTemplateColumn Header="Resource Access" Width="105">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ResourceAccessDisplay}" 
                                       HorizontalAlignment="Center"
                                       ToolTip="{Binding ResourceAccessTooltip}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ResourceAccessManagedByConfigMgr}" Value="False">
                                                <Setter Property="Foreground" Value="#107C10"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ResourceAccessManagedByConfigMgr}" Value="True">
                                                <Setter Property="Foreground" Value="#CA5010"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- Inventory -->
                <DataGridTemplateColumn Header="Inventory" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding InventoryDisplay}" 
                                       HorizontalAlignment="Center"
                                       ToolTip="{Binding InventoryTooltip}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding InventoryManagedByConfigMgr}" Value="False">
                                                <Setter Property="Foreground" Value="#107C10"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding InventoryManagedByConfigMgr}" Value="True">
                                                <Setter Property="Foreground" Value="#CA5010"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="DeviceCountText" 
                       Grid.Column="0" 
                       Text="0 devices shown" 
                       FontSize="12" 
                       Foreground="#666"
                       VerticalAlignment="Center"/>
            
            <Button Grid.Column="1" 
                    Content="ðŸ“‹ Export to CSV"
                    Click="ExportButton_Click"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button Grid.Column="2" 
                    Content="Close"
                    Click="CloseButton_Click"
                    Padding="20,8"
                    Background="#F0F0F0"
                    Foreground="#333"
                    BorderThickness="1"
                    BorderBrush="#CCC"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
