                                                            </TextBlock>

                                                            <TextBlock Grid.Column="1" Margin="0,0,15,0">
                                                                <Run Text="Devices: " Foreground="#999999"/>
                                                                <Run Text="{Binding TargetedDevices}" FontWeight="Bold" Foreground="#666666"/>
                                                            </TextBlock>

                                                            <TextBlock Grid.Column="2">
                                                                <Run Text="Effort: " Foreground="#999999"/>
                                                                <Run Text="{Binding EstimatedEffort}" FontWeight="Bold" Foreground="#666666"/>
                                                            </TextBlock>
                                                        </Grid>

                                                        <!-- Recommendation -->
                                                        <TextBlock Grid.Row="2" Text="{Binding Recommendation}" 
                                                                   FontSize="13" Foreground="#333333" TextWrapping="Wrap" Margin="0,0,0,8"/>

                                                        <!-- Complexity Score Bar -->
                                                        <Grid Grid.Row="3">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" Text="Complexity:" FontSize="11" Foreground="#999999" Margin="0,0,10,0"/>

                                                            <ProgressBar Grid.Column="1" Height="8" 
                                                                         Value="{Binding ComplexityScore}" Maximum="100"
                                                                         VerticalAlignment="Center">
                                                                <ProgressBar.Style>
                                                                    <Style TargetType="ProgressBar">
                                                                        <Setter Property="Foreground" Value="#107C10"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ComplexityScore}" Value="30">
                                                                                <Setter Property="Foreground" Value="#FF8C00"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding ComplexityScore}" Value="60">
                                                                                <Setter Property="Foreground" Value="#D83B01"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </ProgressBar.Style>
                                                            </ProgressBar>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Empty State -->
                                    <Border Background="#F3F3F3" Padding="30" CornerRadius="4"
                                            Visibility="{Binding ApplicationMigrations, Converter={StaticResource CollectionToVisibilityConverter}, ConverterParameter=Inverse}">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸ“¦ No applications to analyze" 
                                                       FontSize="14" FontWeight="Bold" Foreground="#666666" 
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Connect to ConfigMgr to scan application inventory" 
                                                       FontSize="12" Foreground="#999999" 
                                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- AI ACTION COMMAND CENTER TAB -->
                <TabItem Header="ðŸ¤– AI Actions" Visibility="{Binding ShowAIActionsTab}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                        <StackPanel>
                            <!-- AI Status Banner -->
                            <Border Background="#FFF3CD" Padding="15" CornerRadius="4" Margin="0,0,0,15"
                                    Visibility="{Binding IsAIAvailable, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="âš ï¸ AI INSIGHTS UNAVAILABLE" FontWeight="Bold" FontSize="14" Foreground="#856404"/>
                                        <TextBlock Text="Azure OpenAI is not configured. Configure AI to get actionable recommendations for enrollment and workload transition." 
                                                   FontSize="12" Foreground="#856404" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="ðŸ¤– Configure AI" 
                                            Command="{Binding ShowAISettingsCommand}"
                                            Style="{StaticResource ActionButton}"
                                            Background="#FF8C00"
                                            VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- AI Action Summary Content -->
                            <StackPanel Visibility="{Binding AIActionSummary, Converter={StaticResource NullToVisibilityConverter}}">
                                
                                <!-- Primary Enrollment Action -->
                                <Border Background="#E8F5E9" BorderBrush="#107C10" BorderThickness="2" Padding="20" CornerRadius="4" Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ“± PRIMARY ENROLLMENT ACTION" 
                                                   FontSize="14" FontWeight="Bold" Foreground="#107C10" 
                                                   Margin="0,0,0,10"/>
                                        <TextBlock Text="{Binding AIActionSummary.PrimaryEnrollmentAction}" 
                                                   FontSize="16" FontWeight="SemiBold" Foreground="#333333" 
                                                   TextWrapping="Wrap" Margin="0,0,0,10"/>
                                        <Border Background="#FFF" Padding="10" CornerRadius="3">
                                            <TextBlock FontSize="13" Foreground="#666">
                                                <Run Text="ðŸ’¥ Impact: " FontWeight="Bold"/>
                                                <Run Text="{Binding AIActionSummary.EnrollmentActionImpact, Mode=OneWay}"/>
                                                <Run Text=" devices affected"/>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>
                                </Border>

                                <!-- Primary Workload Action -->
                                <Border Background="#E3F2FD" BorderBrush="#0078D4" BorderThickness="2" Padding="20" CornerRadius="4" Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ”„ PRIMARY WORKLOAD ACTION" 
                                                   FontSize="14" FontWeight="Bold" Foreground="#0078D4" 
                                                   Margin="0,0,0,10"/>
                                        <TextBlock Text="{Binding AIActionSummary.PrimaryWorkloadAction}" 
                                                   FontSize="16" FontWeight="SemiBold" Foreground="#333333" 
                                                   TextWrapping="Wrap" Margin="0,0,0,10"/>
                                        <Border Background="#FFF" Padding="10" CornerRadius="3">
                                            <TextBlock FontSize="13" Foreground="#666">
                                                <Run Text="ðŸŽ¯ Impact: " FontWeight="Bold"/>
                                                <Run Text="{Binding AIActionSummary.WorkloadActionImpact}"/>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>
                                </Border>

                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Enrollment Blockers -->
                                    <Border Grid.Column="0" Style="{StaticResource SectionCard}" Margin="0,0,7,0">
                                        <StackPanel>
                                            <TextBlock Text="âš ï¸ ENROLLMENT BLOCKERS" Style="{StaticResource SectionTitle}" Margin="0,0,0,15"/>
                                            
                                            <ItemsControl ItemsSource="{Binding AIActionSummary.EnrollmentBlockers}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#FFEBEE" Padding="10" CornerRadius="4" Margin="0,0,0,8">
                                                            <TextBlock Text="{Binding Mode=OneWay}" 
                                                                       FontSize="12" Foreground="#C62828" TextWrapping="Wrap"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Empty State -->
                                            <Border Background="#E8F5E9" Padding="12" CornerRadius="4"
                                                    Visibility="{Binding AIActionSummary.EnrollmentBlockers, Converter={StaticResource CollectionToVisibilityConverter}, ConverterParameter=Inverse}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="âœ“" FontSize="16" Foreground="#107C10" Margin="0,0,10,0"/>
                                                    <TextBlock Text="No enrollment blockers" 
                                                               FontSize="12" Foreground="#107C10" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <!-- Workload Blockers -->
                                    <Border Grid.Column="1" Style="{StaticResource SectionCard}" Margin="7,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="âš ï¸ WORKLOAD BLOCKERS" Style="{StaticResource SectionTitle}" Margin="0,0,0,15"/>
                                            
                                            <ItemsControl ItemsSource="{Binding AIActionSummary.WorkloadBlockers}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#FFEBEE" Padding="10" CornerRadius="4" Margin="0,0,0,8">
                                                            <TextBlock Text="{Binding Mode=OneWay}" 
                                                                       FontSize="12" Foreground="#C62828" TextWrapping="Wrap"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Empty State -->
                                            <Border Background="#E8F5E9" Padding="12" CornerRadius="4"
                                                    Visibility="{Binding AIActionSummary.WorkloadBlockers, Converter={StaticResource CollectionToVisibilityConverter}, ConverterParameter=Inverse}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="âœ“" FontSize="16" Foreground="#107C10" Margin="0,0,10,0"/>
                                                    <TextBlock Text="No workload blockers" 
                                                               FontSize="12" Foreground="#107C10" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- AI Recommendation -->
                                <Border Style="{StaticResource SectionCard}">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ¤– AI RECOMMENDATION" 
                                                   Style="{StaticResource SectionTitle}" Margin="0,0,0,10"/>
                                        <TextBlock Text="{Binding AIActionSummary.AIRecommendation}" 
                                                   FontSize="14" Foreground="#333333" TextWrapping="Wrap" LineHeight="22"/>
                                        <TextBlock FontSize="12" FontStyle="Italic" Foreground="#999" Margin="0,10,0,0">
                                            <Run Text="Next milestone in "/>
