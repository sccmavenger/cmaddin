                                                            <Border Grid.Column="1" Padding="8,4" CornerRadius="3" Margin="10,0,0,0">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Background" Value="#E8F5E9"/>
