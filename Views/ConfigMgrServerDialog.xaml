<Window x:Class="ZeroTrustMigrationAddin.Views.ConfigMgrServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfigMgr Site Server" 
        Height="430" Width="480"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="#F3F3F3"
        FontFamily="Segoe UI Emoji, Segoe UI, Arial"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E1E1E1"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D1D1D1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="ðŸ–¥ï¸ Connect to ConfigMgr" FontSize="20" FontWeight="SemiBold" Foreground="#323130"/>
            <TextBlock Text="Enter your ConfigMgr Site Server name or FQDN" 
                       FontSize="13" Foreground="#605E5C" Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Input Field -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="Site Server" FontSize="13" FontWeight="SemiBold" Foreground="#323130" Margin="0,0,0,6"/>
            <TextBox x:Name="ServerNameTextBox" 
                     FontSize="14" 
                     Padding="12,10" 
                     BorderBrush="#8A8886"
                     BorderThickness="1">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="White" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#0078D4"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </StackPanel>
        
        <!-- Examples -->
        <Border Grid.Row="2" Background="#F0F0F0" CornerRadius="4" Padding="12" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Examples:" FontSize="12" FontWeight="SemiBold" Foreground="#605E5C" Margin="0,0,0,6"/>
                <TextBlock Text="â€¢ localhost (if running on the site server)" FontSize="12" Foreground="#605E5C"/>
                <TextBlock Text="â€¢ CM01" FontSize="12" Foreground="#605E5C"/>
                <TextBlock Text="â€¢ CM01.contoso.com" FontSize="12" Foreground="#605E5C"/>
                <TextBlock Text="â€¢ sccm.corp.contoso.local" FontSize="12" Foreground="#605E5C"/>
            </StackPanel>
        </Border>
        
        <!-- Info Text -->
        <TextBlock Grid.Row="3" 
                   Text="The app will try both Admin Service (REST API) and WMI as fallback."
                   FontSize="12" Foreground="#605E5C" 
                   TextWrapping="Wrap"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,16"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Style="{StaticResource SecondaryButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"
                    MinWidth="90"/>
            <Button x:Name="ConnectButton" 
                    Content="Connect" 
                    Style="{StaticResource ModernButton}"
                    Click="ConnectButton_Click"
                    IsDefault="True"
                    MinWidth="90"/>
        </StackPanel>
    </Grid>
</Window>
