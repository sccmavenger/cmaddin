<Window x:Class="ZeroTrustMigrationAddin.Views.DiagnosticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Diagnostics" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        FontFamily="Segoe UI Emoji, Segoe UI, Arial">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ” Connection &amp; Data Source Diagnostics" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#0078D4"/>
            <TextBlock Text="See exactly what's connected and which data is real vs mock" 
                       FontSize="14" Foreground="#666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Diagnostics Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Overall Authentication Status (NEW) -->
                <Border Background="#FFF4E6" CornerRadius="8" Padding="15" Margin="0,0,0,15" BorderBrush="#FF8C00" BorderThickness="2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock x:Name="OverallStatusIcon" Text="âš«" FontSize="24" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock x:Name="OverallStatusHeader" Text="Overall Status" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="OverallStatusText" TextWrapping="Wrap" FontSize="14" LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Microsoft Graph Status -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="GraphStatusIcon" Text="âš«" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Microsoft Graph (Intune)" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="GraphStatusText" TextWrapping="Wrap" FontSize="14"/>
                        <TextBlock x:Name="GraphDataSources" TextWrapping="Wrap" FontSize="12" Foreground="#666" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- ConfigMgr Status -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="ConfigMgrStatusIcon" Text="âš«" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="ConfigMgr Connection" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ConfigMgrStatusText" TextWrapping="Wrap" FontSize="14"/>
                        <TextBlock x:Name="ConfigMgrDataSources" TextWrapping="Wrap" FontSize="12" Foreground="#666" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Azure OpenAI Status (NEW) -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="AIStatusIcon" Text="âš«" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Azure OpenAI (GPT-4)" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="AIStatusText" TextWrapping="Wrap" FontSize="14"/>
                        <TextBlock x:Name="AIDataSources" TextWrapping="Wrap" FontSize="12" Foreground="#666" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Data Sections Status -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Dashboard Sections - Data Sources" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <TextBlock x:Name="SectionsStatus" TextWrapping="Wrap" FontSize="14" LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Query Log (NEW) -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“Š Data Query Log" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text=" - See exactly what queries are being executed" FontSize="12" Foreground="#666" VerticalAlignment="Bottom" Margin="10,0,0,2"/>
                        </StackPanel>
                        <TextBlock Text="These are the actual Graph API, WMI, and Admin Service queries used to retrieve data. Copy and paste into Graph Explorer or PowerShell to reproduce." 
                                   FontSize="12" Foreground="#666" TextWrapping="Wrap" Margin="0,0,0,10"/>
                        <DataGrid x:Name="QueryLogGrid" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True"
                                  Height="250"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat=HH:mm:ss}" Width="70"/>
                                <DataGridTextColumn Header="Source" Binding="{Binding SourceDisplay}" Width="100"/>
                                <DataGridTextColumn Header="Operation" Binding="{Binding Operation}" Width="180"/>
                                <DataGridTextColumn Header="Query" Binding="{Binding Query}" Width="*"/>
                                <DataGridTextColumn Header="Results" Binding="{Binding ResultCount}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="ðŸ”„ Refresh" Click="RefreshQueryLog_Click" 
                                    Background="#E8E8E8" Padding="10,5" Margin="0,0,10,0"/>
                            <Button Content="ðŸ“‹ Copy Selected" Click="CopyQuery_Click"
                                    Background="#E8E8E8" Padding="10,5" Margin="0,0,10,0"/>
                            <Button Content="ðŸ’¾ Export All" Click="ExportQueryLog_Click"
                                    Background="#E8E8E8" Padding="10,5" Margin="0,0,10,0"/>
                            <Button Content="ðŸ“‚ Open Log Folder" Click="OpenLogFolder_Click"
                                    Background="#E8E8E8" Padding="10,5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Debug Log -->
                <Border Background="White" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="ðŸ› Connection Debug Log" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <TextBox x:Name="DebugLog" 
                                 TextWrapping="Wrap" 
                                 IsReadOnly="True" 
                                 FontFamily="Consolas" 
                                 FontSize="12" 
                                 Background="#F8F8F8"
                                 Height="200"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="ðŸ”§ Manual ConfigMgr Setup" Width="200" Height="35" 
                    Margin="0,0,10,0"
                    Click="ManualConfigMgrButton_Click"
                    Background="#FF8C00" Foreground="White" 
                    BorderThickness="0" FontSize="14" FontWeight="SemiBold"
                    ToolTip="Manually enter your ConfigMgr site server name"/>
            <Button Content="Close" Width="100" Height="35" 
                    Click="CloseButton_Click"
                    Background="#0078D4" Foreground="White" 
                    BorderThickness="0" FontSize="14" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
