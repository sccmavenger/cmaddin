<Window x:Class="ZeroTrustMigrationAddin.Views.MigrationImpactReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Migration Impact Report" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F3F4F6">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“ˆ" FontSize="28" VerticalAlignment="Center"/>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="Migration Impact Report" FontSize="22" FontWeight="Bold" Foreground="#1F2937"/>
                            <TextBlock x:Name="GeneratedText" Text="Generated: January 16, 2026" 
                                       FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- Overall Improvement -->
                <Border Grid.Column="1" Background="#ECFDF5" CornerRadius="8" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="OVERALL IMPROVEMENT" FontSize="10" Foreground="#059669" 
                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="CurrentScoreText" Text="45" FontSize="24" FontWeight="Bold" Foreground="#6B7280"/>
                            <TextBlock Text=" â†’ " FontSize="24" Foreground="#9CA3AF"/>
                            <TextBlock x:Name="ProjectedScoreText" Text="82" FontSize="24" FontWeight="Bold" Foreground="#10B981"/>
                        </StackPanel>
                        <TextBlock x:Name="ImprovementText" Text="+37 points" FontSize="14" FontWeight="Bold" 
                                   Foreground="#059669" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Executive Summary -->
                <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Executive Summary" FontSize="14" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                        <TextBlock x:Name="SummaryText" TextWrapping="Wrap" FontSize="13" Foreground="#4B5563" LineHeight="22"/>
                    </StackPanel>
                </Border>
                
                <!-- Category Breakdown -->
                <TextBlock Text="Impact by Category" FontSize="16" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,0,0,12"/>
                <ItemsControl x:Name="CategoryCards">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Category Header -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="{Binding Color}" CornerRadius="4" Width="32" Height="32">
                                                <TextBlock Text="{Binding Icon}" FontSize="16" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="{Binding DisplayName}" FontSize="15" FontWeight="SemiBold" 
                                                       Foreground="#1F2937" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="{Binding CurrentScore}" FontSize="20" FontWeight="Bold" Foreground="#6B7280"/>
                                            <TextBlock Text=" â†’ " FontSize="20" Foreground="#D1D5DB"/>
                                            <TextBlock Text="{Binding ProjectedScore}" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                                            <TextBlock Text="{Binding ScoreImprovementDisplay}" FontSize="12" FontWeight="SemiBold" 
                                                       Foreground="#059669" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <!-- Summary -->
                                    <TextBlock Grid.Row="1" Text="{Binding Summary}" TextWrapping="Wrap" 
                                               FontSize="12" Foreground="#6B7280" Margin="0,8,0,8"/>
                                    
                                    <!-- Key Metrics -->
                                    <ItemsControl Grid.Row="2" ItemsSource="{Binding Metrics}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F9FAFB" CornerRadius="4" Padding="8" Margin="0,0,8,8" MinWidth="180">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontSize="11" FontWeight="SemiBold" Foreground="#374151"/>
                                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                            <TextBlock Text="{Binding CurrentDisplay}" FontSize="12" Foreground="#6B7280"/>
                                                            <TextBlock Text=" â†’ " FontSize="12" Foreground="#D1D5DB"/>
                                                            <TextBlock Text="{Binding ProjectedDisplay}" FontSize="12" FontWeight="SemiBold" Foreground="#10B981"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Workload Impacts -->
                <TextBlock Text="Co-Management Workload Benefits" FontSize="16" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,8,0,12"/>
                <Border Background="White" CornerRadius="8" Padding="16">
                    <ItemsControl x:Name="WorkloadList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="8" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}" FontSize="18"/>
                                            <TextBlock Text="{Binding WorkloadName}" FontSize="13" FontWeight="SemiBold" 
                                                       Foreground="#374151" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="1" Text="{Binding CurrentState}" FontSize="11" 
                                                   Foreground="#6B7280" VerticalAlignment="Center" Margin="16,0"/>
                                        
                                        <Border Grid.Column="2" CornerRadius="4" Padding="8,4"
                                                Background="{Binding StatusBackground}">
                                            <TextBlock Text="{Binding StatusText}" FontSize="10" Foreground="{Binding StatusForeground}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
                
                <!-- Timeline -->
                <Border Background="#FEF3C7" CornerRadius="8" Padding="16" Margin="0,16,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â±ï¸" FontSize="20" VerticalAlignment="Center"/>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="Estimated Timeline to Full Benefits" FontSize="13" FontWeight="SemiBold" Foreground="#92400E"/>
                            <TextBlock x:Name="TimelineText" Text="~260 days at current velocity" FontSize="12" Foreground="#B45309"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ“‹ Copy Summary" Click="CopySummary_Click" Padding="16,8" Margin="0,0,8,0"
                        Background="Transparent" BorderBrush="#6B7280" BorderThickness="1" Foreground="#6B7280" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Close" Padding="20,8" Click="CloseButton_Click"
                        Background="#3B82F6" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
