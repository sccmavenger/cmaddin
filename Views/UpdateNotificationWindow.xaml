<Window x:Class="ZeroTrustMigrationAddin.Views.UpdateNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ZeroTrustMigrationAddin.ViewModels"
        xmlns:converters="clr-namespace:ZeroTrustMigrationAddin.Converters"
        Title="Update Available - Cloud Native Assessment"
        Width="600" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        FontFamily="Segoe UI Emoji, Segoe UI, Arial">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        
        <Style TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="ðŸ”„" FontSize="48" VerticalAlignment="Center" Margin="0,0,15,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Update Available" FontSize="24" FontWeight="Bold" Foreground="#0078D4"/>
                <TextBlock FontSize="14" Foreground="#666">
                    <Run Text="Version"/>
                    <Run Text="{Binding LatestVersion}" FontWeight="Bold"/>
                    <Run Text="is ready to install"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Version Info -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Current Version" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentVersion}" FontSize="20" FontWeight="Bold"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="â†’" FontSize="32" VerticalAlignment="Center" 
                          Foreground="#0078D4" Margin="20,0"/>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="New Version" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding LatestVersion}" FontSize="20" FontWeight="Bold" Foreground="#0078D4"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Release Notes -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="What's New" FontSize="14" FontWeight="Bold" 
                          Margin="0,0,0,10"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding ReleaseNotes}" TextWrapping="Wrap" FontSize="13" 
                              Foreground="#333" LineHeight="20"/>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Download Info -->
        <Border Grid.Row="3" Background="#E8F4FD" CornerRadius="8" Padding="12" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“¦" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock FontSize="13" Foreground="#333">
                        <Run Text="Delta update:"/>
                        <Run Text="{Binding ChangedFileCount}" FontWeight="Bold"/>
                        <Run Text="files changed"/>
                        <Run Text="â€¢"/>
                        <Run Text="{Binding DeltaSizeFormatted}" FontWeight="Bold"/>
                        <Run Text="download"/>
                    </TextBlock>
                    <TextBlock Text="Only modified files will be downloaded" FontSize="11" 
                              Foreground="#666" Margin="0,3,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Progress Bar (visible when downloading) -->
        <Border Grid.Row="4" Margin="0,0,0,15" Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel>
                <TextBlock Text="{Binding StatusMessage}" FontSize="13" Margin="0,0,0,5" 
                          HorizontalAlignment="Center" Foreground="#0078D4"/>
                <ProgressBar Height="8" Value="{Binding DownloadProgress}" Maximum="100" 
                            BorderThickness="0" Background="#E0E0E0" Foreground="#0078D4"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Download &amp; Install" 
                    Background="#0078D4" 
                    Command="{Binding DownloadCommand}"
                    IsEnabled="{Binding IsDownloading, Converter={StaticResource InverseBoolConverter}}"/>

            <Button Grid.Column="1" Content="Remind Me Later" 
                    Background="#666" 
                    Command="{Binding RemindLaterCommand}"
                    IsEnabled="{Binding IsDownloading, Converter={StaticResource InverseBoolConverter}}"/>

            <Button Grid.Column="2" Content="Skip This Version" 
                    Background="#999" 
                    Command="{Binding SkipCommand}"
                    IsEnabled="{Binding IsDownloading, Converter={StaticResource InverseBoolConverter}}"/>
        </Grid>
    </Grid>
</Window>
