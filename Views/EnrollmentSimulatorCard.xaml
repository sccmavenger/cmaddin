<UserControl x:Class="ZeroTrustMigrationAddin.Views.EnrollmentSimulatorCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ZeroTrustMigrationAddin.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <Style x:Key="ProgressBar" TargetType="Border">
            <Setter Property="Height" Value="10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>
        
        <Style x:Key="GapItem" TargetType="Border">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </UserControl.Resources>

    <Border Background="White" CornerRadius="8" Padding="20" 
            BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ”¬" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ENROLLMENT READINESS ANALYZER" FontSize="14" FontWeight="Bold" Foreground="#333333"/>
                            <Border x:Name="DataSourceBadge" Background="#FFF3E0" CornerRadius="3" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock x:Name="DataSourceText" Text="ðŸ“‹ Demo Data" FontSize="10" Foreground="#E65100"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="100% data-driven compliance prediction" FontSize="11" Foreground="#666666" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <Button Grid.Column="2" x:Name="RunSimulationButton" Click="RunSimulation_Click"
                        Background="#0078D4" Foreground="White" Padding="16,8"
                        BorderThickness="0" Cursor="Hand" FontWeight="SemiBold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="ButtonIcon" Text="â–¶" FontSize="10" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ButtonText" Text="Run Analysis"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Loading State -->
            <Border Grid.Row="1" x:Name="LoadingPanel" Visibility="Collapsed"
                    Background="#F0F4F8" CornerRadius="6" Padding="20" Margin="0,0,0,16">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”„" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="LoadingText" Text="Gathering device inventory..." 
                               FontSize="13" Foreground="#666666" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Results Overview -->
            <Grid Grid.Row="1" x:Name="ResultsPanel" Visibility="Collapsed" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Ready Devices -->
                <Border Grid.Column="0" Style="{StaticResource MetricCard}" Background="#E8F5E9">
                    <StackPanel>
                        <TextBlock Text="âœ“ READY TO ENROLL" FontSize="10" FontWeight="Bold" Foreground="#2E7D32"/>
                        <TextBlock x:Name="ReadyCount" Text="0" FontSize="28" FontWeight="Bold" Foreground="#2E7D32" Margin="0,4,0,0"/>
                        <TextBlock x:Name="ReadyPercent" Text="0% of unenrolled" FontSize="11" Foreground="#666666"/>
                    </StackPanel>
                </Border>
                
                <!-- Needs Remediation -->
                <Border Grid.Column="1" Style="{StaticResource MetricCard}" Background="#FFF3E0">
                    <StackPanel>
                        <TextBlock Text="âš  NEEDS REMEDIATION" FontSize="10" FontWeight="Bold" Foreground="#E65100"/>
                        <TextBlock x:Name="RemediationCount" Text="0" FontSize="28" FontWeight="Bold" Foreground="#E65100" Margin="0,4,0,0"/>
                        <TextBlock x:Name="RemediationPercent" Text="0% of unenrolled" FontSize="11" Foreground="#666666"/>
                    </StackPanel>
                </Border>
                
                <!-- Projected Compliance -->
                <Border Grid.Column="2" Style="{StaticResource MetricCard}" Margin="0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š PROJECTED COMPLIANCE" FontSize="10" FontWeight="Bold" Foreground="#0D47A1"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                            <TextBlock x:Name="CurrentRate" Text="0%" FontSize="16" Foreground="#666666"/>
                            <TextBlock Text=" â†’ " FontSize="16" Foreground="#999999"/>
                            <TextBlock x:Name="ProjectedRate" Text="0%" FontSize="20" FontWeight="Bold" Foreground="#0D47A1"/>
                        </StackPanel>
                        <TextBlock x:Name="ProjectedNote" Text="after enrollment" FontSize="11" Foreground="#666666"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Compliance Gap Summary -->
            <Border Grid.Row="2" x:Name="GapSummaryPanel" Visibility="Collapsed"
                    Background="#FAFAFA" CornerRadius="6" Padding="15" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="TOP COMPLIANCE GAPS" FontSize="11" FontWeight="SemiBold" 
                               Foreground="#666666" Margin="0,0,0,12"/>
                    
                    <ItemsControl x:Name="GapList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource GapItem}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="16" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Requirement}" FontSize="12" FontWeight="SemiBold" Foreground="#333333"/>
                                            <TextBlock Text="{Binding RemediationAction}" FontSize="10" Foreground="#666666" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding DeviceCount, StringFormat='{}{0} devices'}" 
                                                   FontSize="11" Foreground="#E65100" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <Border Grid.Column="3" Background="{Binding EffortColor}" CornerRadius="3" Padding="8,3" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding RemediationEffort}" FontSize="10" Foreground="White" HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Data Quality Warning -->
            <Border Grid.Row="3" x:Name="WarningsPanel" Visibility="Collapsed"
                    Background="#FFF8E1" CornerRadius="4" Padding="12" Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â„¹ï¸" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Top"/>
                    <TextBlock x:Name="WarningText" Text="" FontSize="11" Foreground="#795548" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <Grid Grid.Row="4" x:Name="ActionsPanel" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="DataFreshnessText" Text="Data freshness: 95%" 
                           FontSize="11" Foreground="#666666" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="ViewDetailsButton" Click="ViewDetails_Click"
                            Content="View Details" Background="Transparent" 
                            Foreground="#0078D4" BorderThickness="0" 
                            Cursor="Hand" Padding="10,6" Margin="0,0,10,0"/>
                    <Button x:Name="ExportButton" Click="Export_Click"
                            Content="ðŸ“¤ Export Remediation Plan" Background="#F5F5F5" 
                            BorderThickness="1" BorderBrush="#E0E0E0"
                            Cursor="Hand" Padding="12,6">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Initial State (No Simulation Run) -->
            <Border Grid.Row="1" x:Name="InitialPanel" 
                    Background="#F8F9FA" CornerRadius="6" Padding="30">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŽ¯" FontSize="36" HorizontalAlignment="Center"/>
                    <TextBlock Text="Predict Enrollment Compliance" FontSize="16" FontWeight="SemiBold" 
                               Foreground="#333333" Margin="0,12,0,6" HorizontalAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#666666" 
                               HorizontalAlignment="Center" TextAlignment="Center" MaxWidth="400">
                        Analyze your ConfigMgr devices against Intune compliance policies to see which devices 
                        would be compliant if enrolled today, and what remediation is needed for the rest.
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Border Background="#E3F2FD" CornerRadius="4" Padding="10,5" Margin="0,0,8,0">
                            <TextBlock Text="âœ“ Uses actual device inventory" FontSize="11" Foreground="#1565C0"/>
                        </Border>
                        <Border Background="#E8F5E9" CornerRadius="4" Padding="10,5" Margin="0,0,8,0">
                            <TextBlock Text="âœ“ Queries real Intune policies" FontSize="11" Foreground="#2E7D32"/>
                        </Border>
                        <Border Background="#FFF3E0" CornerRadius="4" Padding="10,5">
                            <TextBlock Text="âœ“ Actionable remediation plan" FontSize="11" Foreground="#E65100"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
