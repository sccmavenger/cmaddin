<Window x:Class="ZeroTrustMigrationAddin.Views.RecommendationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enrollment Recommendations" 
        Height="550" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F3F4F6">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ’¡" FontSize="28" VerticalAlignment="Center"/>
                <StackPanel Margin="12,0,0,0">
                    <TextBlock Text="Recommendations to Improve Your Score" FontSize="20" FontWeight="Bold" Foreground="#1F2937"/>
                    <TextBlock x:Name="SubtitleText" Text="Actionable steps to accelerate your cloud migration" 
                               FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
        <!-- Recommendations List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="RecommendationsPanel">
                <!-- Loading state -->
                <Border x:Name="LoadingPanel" Background="White" CornerRadius="8" Padding="24" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Generating personalized recommendations..." FontSize="14" 
                                   Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Recommendations will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="RefreshButton" Content="ðŸ”„ Refresh" Padding="16,8" Click="RefreshButton_Click" Margin="0,0,8,0"
                        Background="Transparent" BorderBrush="#3B82F6" BorderThickness="1" Foreground="#3B82F6" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Close" Padding="20,8" Click="CloseButton_Click"
                        Background="#3B82F6" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
